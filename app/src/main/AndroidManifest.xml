<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Network Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Storage Permissions -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <!-- Camera Permissions (for future features) -->
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinancialManagement"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        
        <!-- Main Activity -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.FinancialManagement.NoActionBar" />
        
        <!-- Intro/Onboarding Activity -->
        <activity
            android:name=".activities.IntroActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.FinancialManagement.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Login Activity -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="false"
            android:label="@string/login_title"
            android:theme="@style/Theme.FinancialManagement.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- Register Activity -->
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:label="Đăng ký"
            android:theme="@style/Theme.FinancialManagement.NoActionBar"
            android:screenOrientation="portrait" />

        <!-- Forgot Password Activity -->
        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:exported="false"
            android:label="Quên mật khẩu"
            android:theme="@style/Theme.FinancialManagement.NoActionBar"
            android:screenOrientation="portrait" />
        
        <!-- Revenue Detail Activity -->
        <activity
            android:name=".activities.RevenueDetailActivity"
            android:exported="false"
            android:label="Chi tiết doanh thu"
            android:theme="@style/Theme.FinancialManagement.NoActionBar"
            android:parentActivityName=".activities.MainActivity" />
        
        <!-- Project Detail Activity -->
        <activity
            android:name=".activities.ProjectDetailActivity"
            android:exported="false"
            android:label="Chi tiết dự án"
            android:theme="@style/Theme.FinancialManagement.NoActionBar"
            android:parentActivityName=".activities.MainActivity" />

        <!-- Employee Detail Activity -->
        <activity
            android:name=".activities.EmployeeDetailActivity"
            android:exported="false"
            android:label="Chi tiết nhân viên"
            android:theme="@style/Theme.FinancialManagement.NoActionBar"
            android:parentActivityName=".activities.MainActivity" />

        <!-- Task Detail Activity -->
        <activity
            android:name=".activities.TaskDetailActivity"
            android:exported="false"
            android:label="Chi tiết công việc"
            android:theme="@style/Theme.FinancialManagement.NoActionBar"
            android:parentActivityName=".activities.MainActivity" />
        
        <!-- Customer Form Activity -->
        <activity
            android:name=".activities.CustomerFormActivity"
            android:exported="false"
            android:label="Thêm khách hàng"
            android:theme="@style/Theme.FinancialManagement.NoActionBar"
            android:parentActivityName=".activities.MainActivity" />

        <!-- Customer Detail Activity -->
        <activity
            android:name=".activities.CustomerDetailActivity"
            android:exported="false"
            android:label="Chi tiết khách hàng"
            android:theme="@style/Theme.FinancialManagement.NoActionBar"
            android:parentActivityName=".activities.MainActivity" />
        
        <!-- Project Form Activity -->
        <activity
            android:name=".activities.ProjectFormActivity"
            android:exported="false"
            android:label="Tạo dự án"
            android:theme="@style/Theme.FinancialManagement.NoActionBar"
            android:parentActivityName=".activities.MainActivity" />

    </application>

</manifest>