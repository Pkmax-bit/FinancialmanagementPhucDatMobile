<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base Card Style -->
    <style name="Widget.App.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/md_card_background</item>
        <item name="contentPadding">@dimen/padding_card</item>
    </style>
    
    <!-- Outlined Card -->
    <style name="Widget.App.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardBackgroundColor">@color/md_card_background</item>
        <item name="strokeColor">@color/md_outline</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Stat Card (Dashboard) -->
    <style name="Widget.App.Card.Stat" parent="Widget.App.Card">
        <item name="cardElevation">2dp</item>
        <item name="android:layout_margin">@dimen/margin_card</item>
    </style>
    
    <!-- List Item Card -->
    <style name="Widget.App.Card.ListItem" parent="Widget.App.Card">
        <item name="cardElevation">1dp</item>
        <item name="android:layout_margin">@dimen/spacing_xs</item>
        <item name="contentPadding">@dimen/padding_list_item</item>
    </style>
    
    <!-- Surface Container -->
    <style name="Widget.App.Surface" parent="">
        <item name="android:background">@color/md_surface</item>
        <item name="android:padding">@dimen/padding_content</item>
    </style>
    
    <!-- Surface Variant -->
    <style name="Widget.App.Surface.Variant" parent="Widget.App.Surface">
        <item name="android:background">@color/md_surface_variant</item>
    </style>
</resources>
