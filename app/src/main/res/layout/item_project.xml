<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.App.Card.ListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/spacing_sm"
    android:layout_marginEnd="@dimen/spacing_sm"
    android:layout_marginTop="@dimen/spacing_xs"
    android:layout_marginBottom="@dimen/spacing_xs"
    app:cardElevation="2dp"
    app:cardCornerRadius="@dimen/card_corner_radius"
    android:clickable="true"
    android:focusable="true"
    app:rippleColor="@color/md_primary_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_list_item">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Project Code Badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_project_code"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_primary"
                android:textSize="11sp"
                android:textStyle="bold"
                app:chipBackgroundColor="@color/md_primary_light"
                app:chipMinHeight="24dp"
                tools:text="PRJ001" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Status Badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_status"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                app:chipMinHeight="24dp"
                tools:text="Đang hoạt động" />

        </LinearLayout>

        <!-- Project Name -->
        <TextView
            android:id="@+id/tv_project_name"
            style="@style/TextAppearance.App.TitleMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_sm"
            android:textColor="@color/md_text_primary"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="Dự án xây dựng nhà máy sản xuất" />

        <!-- Customer Name -->
        <TextView
            android:id="@+id/tv_customer_name"
            style="@style/TextAppearance.App.BodySmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:textColor="@color/md_text_secondary"
            android:drawableStart="@drawable/ic_customers"
            android:drawablePadding="@dimen/spacing_xs"
            android:drawableTint="@color/md_text_secondary"
            tools:text="Công ty TNHH ABC" />

        <!-- Date Range -->
        <TextView
            android:id="@+id/tv_date_range"
            style="@style/TextAppearance.App.BodySmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/md_text_secondary"
            android:drawableStart="@drawable/ic_calendar"
            android:drawablePadding="@dimen/spacing_xs"
            android:drawableTint="@color/md_text_secondary"
            tools:text="01/01/2024 - 31/12/2024" />

        <!-- Progress Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_progress_label"
                style="@style/TextAppearance.App.LabelSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/md_text_secondary"
                tools:text="Tiến độ: 45%" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progress_indicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                app:indicatorColor="@color/md_primary"
                app:trackColor="@color/md_outline"
                app:trackCornerRadius="4dp"
                tools:progress="45" />

        </LinearLayout>

        <!-- Budget Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.App.LabelSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngân sách"
                    android:textColor="@color/md_text_secondary" />

                <TextView
                    android:id="@+id/tv_budget"
                    style="@style/TextAppearance.App.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_text_primary"
                    android:textStyle="bold"
                    tools:text="500,000,000 VND" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/TextAppearance.App.LabelSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã chi"
                    android:textColor="@color/md_text_secondary" />

                <TextView
                    android:id="@+id/tv_spent"
                    style="@style/TextAppearance.App.BodyMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_expense"
                    android:textStyle="bold"
                    tools:text="225,000,000 VND" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>