<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Row 1: Name + Status + Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Project Name -->
            <TextView
                android:id="@+id/tv_project_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tên dự án"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Hoạt động"
                android:textSize="10sp"
                android:background="@drawable/bg_status_active"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <!-- 3-dot Menu -->
            <ImageButton
                android:id="@+id/btn_menu"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_more_vert"
                android:contentDescription="Menu"
                app:tint="#9CA3AF" />

        </LinearLayout>

        <!-- Row 2: Project Code + Customer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_project_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DA-001"
                android:textSize="12sp"
                android:textColor="#6B7280"
                android:background="@drawable/bg_code_badge"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp" />

            <TextView
                android:id="@+id/tv_customer_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="Khách hàng"
                android:textSize="13sp"
                android:textColor="#374151"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Row 3: Budget + Progress -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <!-- Budget -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngân sách"
                    android:textSize="11sp"
                    android:textColor="#9CA3AF" />

                <TextView
                    android:id="@+id/tv_budget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 ₫"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2563EB" />

            </LinearLayout>

            <!-- Progress -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tv_progress_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#10B981" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="100dp"
                    android:layout_height="6dp"
                    android:layout_marginTop="4dp"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/progress_bar_green" />

            </LinearLayout>

        </LinearLayout>

        <!-- Row 4: Assigned To -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_person"
                app:tint="#9CA3AF" />

            <TextView
                android:id="@+id/tv_assigned_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="Người phụ trách"
                android:textSize="12sp"
                android:textColor="#6B7280" />

        </LinearLayout>

        <!-- Row 4: Dates -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_calendar"
                app:tint="#9CA3AF" />

            <TextView
                android:id="@+id/tv_dates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="01/01/2024 - 31/12/2024"
                android:textSize="12sp"
                android:textColor="#6B7280" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
