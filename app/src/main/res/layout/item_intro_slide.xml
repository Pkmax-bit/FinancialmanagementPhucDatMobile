<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slide_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Content Container with padding -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icon Container with white circle background -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/icon_container"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:cardCornerRadius="90dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="#FFFFFF">

            <ImageView
                android:id="@+id/iv_slide_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:contentDescription="Intro image"
                app:tint="@color/md_primary" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Spacer -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/tv_slide_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:shadowColor="#60000000"
            android:shadowDx="0"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:lineSpacingExtra="4dp" />

        <!-- Spacer -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/tv_slide_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#F5FFFFFF"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6dp"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
