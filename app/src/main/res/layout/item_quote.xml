<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Project Name at Top -->
        <TextView
            android:id="@+id/tv_quote_project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dự án ABC"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Quote ID and Status Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_quote_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="QUO001"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/tv_quote_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã gửi"
                android:textSize="12sp"
                android:textColor="@color/color_success"
                android:background="@drawable/bg_status_active"
                android:padding="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

        </LinearLayout>

        <!-- Total Amount - Prominent Display -->
        <TextView
            android:id="@+id/tv_quote_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="50.000.000 ₫"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorPrimary"
            android:layout_marginBottom="8dp"
            android:gravity="start" />

        <!-- Valid Until Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_quote_valid_until"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hiệu lực đến: 31/12/2024"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.6" />

        </LinearLayout>

        <!-- Customer Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_person"
                android:alpha="0.6"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv_quote_customer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nguyễn Văn A"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:alpha="0.8"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_approve_quote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duyệt"
                android:textSize="12sp"
                android:icon="@drawable/ic_check"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_convert_invoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyển HĐ"
                android:textSize="12sp"
                android:icon="@drawable/ic_invoice"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_send_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gửi"
                android:textSize="12sp"
                android:icon="@drawable/ic_email"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

