<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_invoice_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="INV001"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/tv_invoice_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hóa đơn dự án ABC"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"
                    android:alpha="0.8" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_invoice_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã gửi"
                android:textSize="12sp"
                android:textColor="@color/color_warning"
                android:background="@drawable/bg_status_pending"
                android:padding="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

        </LinearLayout>

        <!-- Financial Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_invoice_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50.000.000 ₫"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary" />

                <TextView
                    android:id="@+id/tv_invoice_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Còn lại: 50.000.000 ₫"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurface"
                    android:alpha="0.6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tv_invoice_due_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hạn thanh toán: 31/12/2024"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurface"
                    android:alpha="0.6" />

            </LinearLayout>

        </LinearLayout>

        <!-- Related Information -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_person"
                    android:alpha="0.6"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_invoice_customer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nguyễn Văn A"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurface"
                    android:alpha="0.8" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_projects"
                    android:alpha="0.6"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_invoice_project"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Dự án ABC"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurface"
                    android:alpha="0.8" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_mark_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã TT"
                android:textSize="12sp"
                android:icon="@drawable/ic_check"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_payment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm TT"
                android:textSize="12sp"
                android:icon="@drawable/ic_add"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_send_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gửi"
                android:textSize="12sp"
                android:icon="@drawable/ic_email"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
